<!--  login form -->
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card2 shadow-2-strong" style="border-radius: 1rem; background-color: rgba(0, 0, 0, 0.500);">
                    <div class="card-body p-5 text-center">
                        <div class="row">

                            <h1 class="display-4 mb-4" style="color: pink;"><i class="fas fa-user-lock"></i> Log In</h1>

                            <!-- message area -->
                            <% if(messages.length > 0) { %>
                            <div id="messageArea" class="alert alert-danger">
                                <%= messages %>
                            </div>
                            <% } %>

                            <form id="loginForm" method="POST" novalidate>

                                <div class="form-outline mb-4">
                                    <div class="input-group mb-1">
                                        <span class="input-group-addon">
                                        </span>
                                        <input type="text" class="form-control" id="username" name="username" required
                                            value="" placeholder="Enter username">
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <div class="input-group mb-2">
                                        <span class="input-group-addon">
                                        </span>
                                        <input type="password" class="form-control" id="password" name="password"
                                            required value="" placeholder="Enter password">
                                    </div>
                                </div>

                                <div class="text-right">
                                    <button id="submitButton" type="submit" class="btn btn-primary btn-lg"> Sign In</button>
                                    <a href="/" id="cancelButton" class="btn btn-warning btn-lg"><span class="d-none d-md-inline">
                                            Cancel</span></a>
                                </div>
                            </form>
                            <hr class="my-4">
                            <p class="text-center text-muted small ">
                                Do not have an account?
                                <a href="/register">Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>